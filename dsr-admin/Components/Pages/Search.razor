@if (attendanceList != null && attendanceList.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Attendance Date</th>
                <th>Present</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in attendanceList)
            {
                <tr>
                    <td>@(index++)</td>
                    <td>@u.FirstName</td>
                    <td>@u.LastName</td>
                    <td>@u.Email</td>
                    <td>@u.Mobile</td>
                    <td>@u.AttandanceDate.DateToString()</td>
                    <td>
                        @if (u.IsPresent)
                        {
                            <span class="badge text-bg-success">Present</span>
                        }
                        else
                        {
                            <span class="badge text-bg-danger">Absent</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex">
                            <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="@GetUpdateModalId(u)">
                                @(u.IsPresent ? "Mark Absent" : "Mark Present")
                            </button>
                            <UpdateAttendance Attendance="@u" OnAttendanceUpdated="SearchAttendanceByDateAsync" />
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No attendance found.</p>
}

