@page "/"

@inject AttendanceClient attendanceClient
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@* @rendermode InteractiveServer *@

<PageTitle>Today's Attendance</PageTitle>

<div class="container mt-4">

    <h3 class="mb-4 text-center text-primary">ðŸ“… Today's Attendance</h3>

    @if (loading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2">Loading attendance...</p>
        </div>
    }
    else if (!attendance.Any())
    {
        <div class="alert alert-warning text-center">
            No attendance data found for today
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark text-center">
                    <tr>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Mobile</th>
                        <th>Attendance Date</th>
                        <th>Status</th>
                        <th>DSR Sent</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (attendance.Any())
                    {
                        index = 1;
                        foreach (var a in attendance)
                        {
                            <tr class="text-center">
                                <td>@index</td>
                                <td class="fw-medium">@a.FirstName</td>
                                <td class="fw-medium">@a.LastName</td>
                                <td>@a.Email</td>
                                <td>@a.Mobile</td>
                                <td>@a.AttandanceDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (a.IsPresent)
                                    {
                                        <span class="badge bg-success px-3 py-2">Present</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger px-3 py-2">Absent</span>
                                    }
                                </td>
                                <td>
                                    @if (a.IsDSRSent)
                                    {
                                        <span class="badge bg-success px-3 py-2">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger px-3 py-2">No</span>
                                    }
                                </td>
                                <td>
                                    @if (!a.IsDSRSent && a.IsPresent)
                                    {
                                        <button class="btn btn-sm btn-primary" @onclick="() => DSRSent(a)" disabled="@a.IsDSRSent">
                                            DSR Sent
                                        </button>

                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary px-3 py-2">Done</span>
                                    }
                                </td>
                            </tr>

                            index++;
                        }
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<TodaysAttendanceResponse> attendance = new();
    private bool loading = true;
    private int index = 1;

    protected override async Task OnInitializedAsync()
    {
        attendance = await attendanceClient.GetTodaysAttendanceAsync();
        loading = false;
    }

    private async Task DSRSent(TodaysAttendanceResponse user)
    {
        await attendanceClient.SendDSRSentAsync(user.Id);
        attendance = await attendanceClient.GetTodaysAttendanceAsync();
        StateHasChanged();
    }
}